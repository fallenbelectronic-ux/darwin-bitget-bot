# === Bitget API (testnet d'abord !) ===
BITGET_API_KEY=
BITGET_API_SECRET=
BITGET_PASSPHRASE=
BITGET_TESTNET=true     # true => sandbox/testnet. Passe à false après tes tests

# === Bot settings ===
# ⚠️ Format symboles CCXT Bitget: BTC/USDT:USDT (linéaire USDT perp)
SYMBOLS=BTC/USDT:USDT,ETH/USDT:USDT,SOL/USDT:USDT
TIMEFRAME=1m
HIGHER_TF=5m
RISK_PER_TRADE=0.002
MIN_RR=3
MAX_LEVERAGE=10
LOOP_DELAY=5
POSITION_MODE=cross      # Bitget est souvent en cross par défaut (tu peux mettre isolated)

# === Telegram alerts (optionnel mais recommandé) ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
